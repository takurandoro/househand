{
  "name": "househand-server",
  "version": "1.0.0",
  "description": "Backend server for HouseHand - Formalizing the informal sector in Rwanda",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit --runInBand --testTimeout=30000",
    "test:watch": "NODE_ENV=test jest --watch --detectOpenHandles --runInBand --testTimeout=30000",
    "test:coverage": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit --runInBand --testTimeout=30000"
  },
  "keywords": [
    "rwanda",
    "informal-sector",
    "marketplace",
    "services"
  ],
  "author": "Takura Ndoro",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.7",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0"
  }
}
